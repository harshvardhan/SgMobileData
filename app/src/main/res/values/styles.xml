

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="sgmYearText">@style/SGM.TextView.YearTextView</item>
        <item name="sgmVolumeText">@style/SGM.TextView.VolumeTextView</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="SGM" parent="FullscreenTheme">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="SGM.TextView" parent="SGM">
        <item name="android:textSize">@dimen/text_size_four</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SGM.TextView.YearTextView" parent="SGM">
        <item name="android:textSize">@dimen/text_size_four</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SGM.TextView.VolumeTextView" parent="SGM">
        <item name="android:textSize">@dimen/text_size_eight</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
